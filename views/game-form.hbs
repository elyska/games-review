
<main>
    <h1>Add New Game</h1>
    <form method="/add-game" action="post" enctype="multipart/form-data">
        <p>
			<label for="name">Name of the Game</label><br />
			<input type="text" name="name" max="60" required>
        </p>
        <p>
			<label for="publisher">Publisher</label><br />
			<input type="text" name="publisher" max="60" required>
        </p>
        <p>
			<label for="year">Year of Release</label><br />
			
            <section>
                <strong>1980</strong>
                <input type="range" min="1980" max="{{currentYear}}" name="year">
                <strong>{{currentYear}}</strong>
            </section>
        </p>
        <p>
        </p>
        <p>
			<label for="description">Description</label><br />
			<textarea name="description" rows="15" required></textarea>
        </p>
        <p>
			<label for="image">Upload a Thumbnail of the Game Box Cover</label><br />
			<input type="file" name="image">
        </p>
        <p>
            <input type="submit" value="Add game">
        </p>
    </form>
</main>

<script type="module" src="/game-form.js"></script>